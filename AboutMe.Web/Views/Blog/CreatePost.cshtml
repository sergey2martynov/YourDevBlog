@model Application.Dtos.Blog.CreatePostDto

<h2>Add a book review</h2>

<form asp-controller="Blog" asp-action="CreatePost" method="post">

    <div class="form-group">
        <div class="col-sm-2">
            <label>Title</label>
        </div>
        <input asp-for="Title" class="form-control col-sm-5" />
    </div>

    <div class="form-group">
        <div class="col-sm-2">
            <label>Message</label>
        </div>
        <textarea asp-for="Message" class="form-control col-sm-10"></textarea>
    </div>

    <div class="form-group">
        <div class="offset-md-2 col-md-10">
            <button type="submit">Update</button>
        </div>
    </div>

</form>