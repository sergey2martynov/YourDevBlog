@model Application.Dtos.Blog.BlogDto
@{
    ViewData["Title"] = "Blog";
}
<div class="col-md-12 mb-3" >
    <a asp-area="" asp-controller="Blog" asp-action="CreatePost" class="btn btn-dark">Create Post</a>
</div>
<table class="table">
    @foreach (var post in Model.Posts)
    {
        <tr>
            <td>
                <h3>@Html.DisplayFor(modelItem => post.Title)</h3>
                <div>
                    @Html.DisplayFor(modelItem => post.Message)
                </div>
            </td>
        </tr>
    }
</table>
