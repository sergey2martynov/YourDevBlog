@model Application.Dtos.Blog.BlogDto
@{
    ViewData["Title"] = "Notes";
}
<div class="col-md-12 mb-3">
    <a asp-area="" asp-controller="Notes" asp-action="CreateNote" class="button">Create Note</a>
</div>
<table class="table">
    @foreach (var post in Model.Posts)
    {
        <tr>
            <td>
                <a asp-area="" asp-controller="Notes" asp-action="NoteDetails" asp-route-id="@post.Id">
                    @Html.DisplayFor(title => post.Title)
                </a>
                <div>
                    @Html.DisplayFor(message => post.Message)
                </div>
            </td>
        </tr>
    }
</table>
