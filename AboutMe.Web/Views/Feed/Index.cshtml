@model Application.ViewModels.FeedVM
@{
    ViewData["Title"] = "Feed";
}
<div class="col-md-12 mb-3">
    <a class="button" asp-area="" asp-controller="Blog" asp-action="CreatePost" class="button">Create Post</a>
</div>

<div class="table-wrapper">
    <table>
        @foreach (var post in Model.Posts)
        {
            <tr>
                <td>
                    <div class="blog-item">
                        <div class="comment-header">
                            <span class="comment-username">@post.User.Name</span>
                            <span class="comment-date">@post.CreatedOn.ToString("dd.MM.yyyy")</span>
                        </div>
                        <a class="post-listing-title-post" asp-area="" asp-controller="Blog" asp-action="PostDetails" asp-route-id="@post.Id">
                            @Html.DisplayFor(title => post.Title)
                        </a>
                        <div>
                            @Html.DisplayFor(message => post.Preview)
                        </div>
                    </div>
                </td>
            </tr>
        }
    </table>
</div>
