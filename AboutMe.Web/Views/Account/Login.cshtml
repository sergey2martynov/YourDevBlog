@model Application.Dtos.Identity.LoginDto

<form asp-controller="Account" asp-action="Login" method="post">
    <div>
        <label>Email</label>
        <input asp-for="Name" />
    </div>
    <div>
        <label>Password</label>
        <input asp-for="Password" type="password" />
    </div>
    <button type="submit">Login</button>
</form>